<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <connectionStrings>
    <add name="sync-today-mssql" connectionString="Server=(localdb)\ProjectsV12; Database=CERIA_SyncToday2015; Trusted_Connection=True;" providerName="System.Data.SqlClient" />
    <add name="moneys4" connectionString="Data Source=(localdb)\ProjectsV12; Initial Catalog=S4_Agenda_TEST_dev; Integrated Security=True;" providerName="System.Data.SqlClient" />
  </connectionStrings>
  <log4net xsi:noNamespaceSchemaLocation="http://csharptest.net/downloads/schema/log4net.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" debug="true">
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="${tmp}\sync.today\Geis_Expedice_Windows_App.log" />
      <maximumFileSize value="50MB" />
      <maxSizeRollBackups value="10" />
      <rollingStyle value="Composite" />
      <appendToFile value="true" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%ndc] - %message%newline" />
      </layout>
    </appender>

    <root>
      <level value="ALL" />
      <appender-ref ref="RollingFileAppender" />
    </root>
  </log4net>

</configuration>
